---
import type Anim from "../pages/anim.astro";
import Card from "./Card.astro";

const animColor="blue";

---




<div class="ben-grid">

    <Card 
    title="anim"; href="/anim"; color= "var(--animColor)";
    gridArea="1 / 1 / 3 / 2";
  />
  

  <Card 
    title="cg-stuff"; href="/cg"; color= "var(--cgColor)";
    gridArea= "1 / 2 / 2 / 3";
    gridAreaM= "1 / 2 / 2 / 3";
  />

  <li id="illus" class="ben-border"  transition:name="illus">
    <a href="/illustrations">Illustrations</a>
  </li>

  <li id="lifed" class="ben-border"  transition:name="lifed">
    <a href="/life-drawings">Life Drawings</a>
  </li>

  <li id="ytvids" class="ben-border" transition:name="ytvids"><a href="./videos">Youtube Videos</a></li>

  <li id="music" class="ben-border" transition:name="music"><a href="./music">Music</a></li>

  <li id="films" class="ben-border" transition:name="films"><a href="./films">Films</a></li>
</div>

<style>
  li {
    background-color: #ffcd7b;
    display: flex;
  }

  .ben-grid {
    flex: 1 1 62%;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 1fr;
    grid-gap: 1rem;
    align-self: flex-start;
    display: grid;
  }

  a {
    display: block;
    height: 100%;
    width: 100%;
  }

  li:before {
    content: "";
    display: block;
    
    padding-bottom: 100%;
  }

  #anim {
    background-color: var(--animColor);
    grid-area: 1 / 1 / 3 / 2;
  }

  #films {
    background-color: var(--filmColor);
    grid-area: 1 / 3 / 2 / 4;
  }

  #illus {
    background-color: var(--illusColor);
    grid-area: 2 / 2 / 4 / 3;
  }
  #lifed {
    background-color: var(--ldColor);
    grid-area: 2 / 3 / 3 / 4;
  }

  #ytvids {
    background-color: var(--vidColor);
    grid-area: 3 / 1 / 4 / 2;
  }

  #music {
    background-color: var(--musicColor);
    grid-area: 3 / 3 / 4 / 4;
  }

  @media (max-width: 992px) {
    li {
      background-color: aliceblue;
    }
    .ben-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    #anim {
      grid-area: 1 / 1 / 3 / 2;
    }
    #cg {
      grid-area: 1 / 2 / 2 / 3;
    }
    #films {
      grid-area: 2 / 2 / 3 / 3;
    }

    #illus {
      grid-area: 3 / 2 / 5 / 3;
    }
    #lifed {
      grid-area: 3 / 1 / 4 / 2;
    }

    #ytvids {
      grid-area: 5 / 2 / 6 / 3;
    }

    #music {
      grid-area: 4 / 1 / 5 / 2;
    }
  }
</style>

