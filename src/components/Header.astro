---
import { Image } from "astro:assets";
import HeaderBG from "../images/WebWater.webp";
---

<div class="header ben-flex" transition:persist>
  <div id="logo" class="ben-border">
    <div class="lcontain">
      <a href="/" class="lcontain">
        <img id="logoLogo" src="LogoLogo.png" ) alt="Ben logo" />
      </a>
      
    </div>
  </div>
  <div id="about">
    <a href="/about" id="aboutLink">
      <img id="benstamp" src="/benStamp.png" ) alt="Ben stamp" />
      <p id="aboutText">
        About Me
      </p>

    </a>
    <p id="email">benknight@alum.calarts.edu</p>
  </div>
</div>


<style>
  .benButt {
    background-color: rgb(155, 196, 108);
    font-size: 2rem;
    padding: 1rem;
    flex: 1 1 100%;
  }

  .header {
  }

  #about {
    width: 15%;
    aspect-ratio: 1/1.4;
    min-width: 150px;
    
    
  }

  #benstamp {
    object-fit: contain;
    width: 100%;
    height:100%;
    min-width: inherit;
    transform: scale(1.2);
   
  }


  #aboutLink {
    position:relative;

  }

  #aboutText {
    position:absolute;
    text-align: center;
    transform-origin: center;
    transform: translate(20%,-270%);
    width:70%;
    
    border-style:solid;
  }



  #logo {
    flex: 18 0 1%;
    background-clip: border-box;
    background-image: url("/webWater.webp");
    background-position: center;
    background-size: cover;
    min-width: 228px;
  }

  #logoLogo {
    width: 70%;
    margin-left: 5%;

    /* margin-bottom: 5%; */
    mix-blend-mode:hard-light;
    filter: brightness(0.5);
    pointer-events: none;
  }

  #email {
    position: relative;
    
    margin-bottom: ;
    color: hsl(177, 35%, 38%);
    font-weight: 700;
    font-size: 50%;
  }

  .lcontain {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  #headerBG {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
