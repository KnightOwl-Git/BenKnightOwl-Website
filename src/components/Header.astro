---
import { Image } from 'astro:assets';
import HeaderBG from "../images/TestBG.webp"


---

<div class="header ben-flex" transition:persist>
  <div id="logo" class="ben-border">
    
    
    <a href="/" class="fillDiv">
        <Image id="headerBG" src={HeaderBG} alt="Ben Knight"/>
        Home
    </a>

  </div>
    <div id="nav" class="ben-border">
      <a class="benButt ben-border" href="/work">Work</a>
      <a class="benButt ben-border" href="/about">about</a>
      <a class="benButt ben-border" href="/contact">Contact</a>
  </div>
</div>

<style>
  .benButt {
    
    background-color: rgb(155, 196, 108);
    font-size: 2rem;
    padding: 1rem;
    flex: 1 1 100%;

  }

  #nav {
    display: flex;
    flex-direction: column;
    flex: 1 1 26%;
    width: 100%;
    background-color: #00fca5;
    gap: 1rem;
  }
  #logo {
    flex: 18 0 1%;
    background-clip: border-box;
    background-image: linear-gradient(
      179deg,
      rgb(61, 255, 210) 10%,
      rgb(122, 251, 255) 90%
    );
    min-width: 228px;
    min-height: 145px;
  }

  #headerBG {
    
    width: 100%;
    height: 100%;
    object-fit: cover;
    overflow: hidden;
    mix-blend-mode: overlay;
  }
</style>
