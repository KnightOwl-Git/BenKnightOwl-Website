---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  imagePath: string;
  altText: string
}

const { title, imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/posts/blog/img/*.{jpeg,jpg,png,gif,webp}');
---


<Image id="post" src={images[imagePath]()} alt={altText} />
<!-- {title} -->

<style>
  #post {
    width: 100% !important;
    height: auto !important;
    margin-bottom: 20px;
    background-color: lightcyan;
  }
</style>
