<style>
  header {
    background-color: var(--animColor);
    height: 200px;
  }

  video {
    width: 100%;
  }

  

  

  .desc {
    flex: 1 1 20%;
  }

  .flex-gallery {
    display: flex;

    justify-content: center;
    align-items: stretch;
    /* flex-flow: row wrap; */
    flex-direction: row;
    flex-wrap: wrap;

    height: 100%;

    gap: 1em;
  }

  .flex-gallery > * {
    aspect-ratio: 16/9;
    min-height: 150px;
    flex-grow: 1;
    background-color: #bbdefb;
    flex-basis: 40%;
  }

  .anim-misc {
    display: flex;

    justify-content: center;
    align-items: stretch;
    /* flex-flow: row wrap; */
    flex-direction: row;
    flex-wrap: wrap;

    

    gap: 1em;
  }

  .anim-misc > * {
    aspect-ratio: 16/9;
    min-height: 150px;
    flex-grow: 1;
    background-color: #79ff82;
    flex-basis: 100%;
  }

  h1 {
    text-align: center;
    font-size: 2em;
    padding-top: 2em;
  }

  .gary-yellow {
    background-color: rgb(117, 241, 231) !important;
  }

  .subheader-color {
    background-color: lightgray;
    padding: 2em;
    margin-bottom: 1em;
  }
  .subheader {
    display: flex;

    gap: 2%;
  }

  .logoContainer {
    flex: 1 1 50%;
  }

  p {
    flex: 1 1 50%;

    font-size: 1.3em;
  }

  .logoImage {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  iframe {
    aspect-ratio: 16/9;
    width: 100%;
  }

  #GLogoImage {
    filter: drop-shadow(0 0 0.55rem rgb(93, 101, 148));
  }

  #NDLogoImage {
    mix-blend-mode: multiply;
  }

  .beeg {
    font-size: 5.5vh;
  }
  section {
    position: relative;
    margin-top: 5em;
    align-items: center;
  }
  #reel {
    position: relative;
    aspect-ratio: 16/9;
    width: 100%;
    border: none;
  }

  @media (max-width: 700px) {
    .subheader {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 1000px) {
    p {
      font-size: 1em;
    }
  }
</style>
